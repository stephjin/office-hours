<div id="loginwindow">
  <h2>Log In</h2>

  <%= bootstrap_form_for(@user, {url:sessions_path}) do |f| %>
    <div class="field">
      
      <%= f.text_field :email %>
    </div>
    <div class="field">
      
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>