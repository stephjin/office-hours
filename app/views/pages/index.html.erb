          <p>
          <% @locations.each do |location| %>
            <div class="box">
              <ul class="row" id="thumbgrid">
                <li class="col-xs-10">
                  <%= location.name %><br>
                  <%=link_to "See more", location_path(location) %>
                </li>
              </ul>
