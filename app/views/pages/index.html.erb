        </div>
        <div class="col-xs-4">
          <h3>Add a new Location</h3>
          <%= render 'locations/form' %>
          
        </div>
      </div>
    </div>

    <% else %>

  <div class="splashpage">
      <div id="splash">

        <%= render 'login' %>

        <%= render 'signup' %>
      </div>
  </div>
  <% end %>

</div>
